<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.FirstPage"
             Shell.NavBarIsVisible="False">
    <!-- Hides the title bar -->

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#0057D9" Offset="0.0" />
            <GradientStop Color="#003580" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Label x:Name="TitleLabel"
                   Text="CivicFix"
                   FontSize="50"
                   FontAttributes="Bold"
                   TextColor="White"
                   Opacity="0"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label x:Name="Tagline1"
                       Text="Your City "
                       FontSize="20"
                       TextColor="White"
                       Opacity="0"
                       Margin="0,0,5,0"/>
                <!-- Adds spacing between words -->

                <Label x:Name="Tagline2"
                       Text=" Your Voice"
                       FontSize="20"
                       TextColor="White"
                       Opacity="0"/>
            </HorizontalStackLayout>

            <Label x:Name="Tagline3"
                   Text="Your Solution"
                   FontSize="20"
                   TextColor="White"
                   Opacity="0"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
